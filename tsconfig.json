{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "es2017"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "jsx": "preserve",
    "noUnusedLocals": true,
    "downlevelIteration": true,
    "declaration": true,
    "noImplicitAny": false,
  },
  "exclude": ["node_modules", "dist"],
  "include": [
    "src"
  ]
}
